.selection{
  border-bottom: 5px solid #ddd;
}
.header{
  border-left: 2px solid lightgreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px 0 10px;
  margin: 0 10px 0 10px;
}
.text-all{
  color:green;
  font-size: 10px;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height: 250rpx;
  width:45%;
  background: goldenrod;
  margin: 5px;
  position: relative;
}
.content-item image{
  width: 100%;
  height: 100%;
}

.content-item-text{
  position: absolute;
  bottom: 0;
  color: white;
  font-size: 10px;
  background: linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0,0, 0, 0.8));
  height: 125rpx;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 0 1% 1% 1%;

}